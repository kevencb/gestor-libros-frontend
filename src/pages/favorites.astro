---
import "/src/styles/global.css";
import Header from "../components/Header.astro";
---

<Header />

<main class="container">
  <h1>Mis Favoritos</h1>
  <div id="favGrid" class="book-grid">
    <h2 class="info-text">Cargando...</h2>
  </div>
</main>

<script type="module">
  import { getFavorites } from "/src/lib/api.js";

  const grid = document.getElementById("favGrid");

  (async () => {
    const user = JSON.parse(localStorage.getItem("user") || "null");

    if (!user || !user.token) {
      alert("Debes iniciar sesión");
      window.location.href = "/login";
      return;
    }

    const favs = await getFavorites(user.token);

    if (!Array.isArray(favs) || favs.length === 0) {
      grid.innerHTML = "<h2 class='info-text'>No tienes favoritos aún.</h2>";
      return;
    }

    grid.innerHTML = favs.map(renderCard).join("");
  })();
</script>

<script is:inline type="module">
  document.addEventListener("click", async (e) => {
    const btn = e.target.closest(".removeFav");
    if (!btn) return;

    const id = btn.dataset.id;
    const user = JSON.parse(localStorage.getItem("user") || "null");

    const res = await fetch(`http://localhost:4000/api/favorites/${id}`, {
      method: "DELETE",
      headers: { Authorization: `Bearer ${user.token}` },
    });

    if (res.ok) {
      btn.closest(".card").remove();
      if (!document.querySelector(".card")) {
        const cont = document.getElementById("favGrid");
        cont.innerHTML = `
          <h2 class='info-text'>No tienes favoritos aún.</h2>
        `;
      }
    } else {
      alert("No se pudo eliminar el favorito");
    }
  });
</script>

<script type="module">
  import { getFavorites } from "/src/lib/api.js";

  const grid = document.getElementById("favGrid");

  function renderCard(b) {
    return `
      <div class="card">
        <img src="${b.coverImage || b.cover}"/>
        <span>${b.genre}</span>
        <h2>${b.title}</h2>
        <h3>${b.author}</h3>
        <div class="card-button-container">
          <button class="btn btn-info seeDetail" data-id="${b._id}"">
            Conoce más
          </button>
          <button class="btn addBtn btn-favorite removeFav" data-id="${b._id}">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#1e293b" class="bi bi-trash3" viewBox="0 0 16 16">
              <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5"/>
            </svg>
          </button>
        </div>
      </div>
    `;
  }

  (async () => {
    const user = JSON.parse(localStorage.getItem("user") || "null");

    if (!user || !user.token) {
      alert("Debes iniciar sesión");
      window.location.href = "/login";
      return;
    }

    const favs = await getFavorites(user.token);

    if (!Array.isArray(favs) || favs.length === 0) {
      grid.innerHTML = "<h2 class='info-text'>No tienes favoritos aún.</h2>";
      return;
    }

    grid.innerHTML = favs.map(renderCard).join("");
  })();

  // ELIMINAR FAVORITO
  document.addEventListener("click", async (e) => {
    if (!e.target.classList.contains("removeFav")) return;

    const id = e.target.dataset.id;
    const user = JSON.parse(localStorage.getItem("user") || "null");

    const res = await fetch(`http://localhost:4000/api/favorites/${id}`, {
      method: "DELETE",
      headers: { Authorization: `Bearer ${user.token}` },
    });

    if (res.ok) {
      e.target.closest(".card").remove();
    } else {
      alert("Libro favorito eliminado");
    }
  });

  // VER DETALLE
  document.addEventListener("click", (e) => {
    if (e.target.classList.contains("seeDetail")) {
      const id = e.target.dataset.id;
      window.location.href = `/books/${id}`;
    }
  });
</script>
